#ask-row.row-fluid
  .span12
    %h1{:style=>"text-align:center"} Who To Ask?

    .row-fluid
      .span4
        =link_to image_tag("facebook_128.png"), "javascript:inviteFacebook();"

#facebook-row.row-fluid{:style=>"display:none;"}
  .span6
    #fb-root
    

-content_for :scripts do
  =javascript_include_tag "http://connect.facebook.net/en_US/all.js"
  :javascript
     
     function inviteFacebook() {
      //$("#ask-row").toggle();
      //$("#facebook-row").toggle();
      FB.init({ 
               appId:'6194336540', 
               cookie:true, 
               status:true
            });
      
     FB.ui({ method: 'apprequests', message: '#{current_user.name} asks How Cute Is This?.'});
     }
