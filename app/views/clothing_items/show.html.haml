- title "Clothing Item"

%p
  %strong Name:
  = @clothing_item.name
%p
  %strong Price:
  = @clothing_item.price
%p
  %strong Description:
  = @clothing_item.description
%p
  %strong Imageurl:
  = @clothing_item.imageurl
%p
  %strong Currency:
  = @clothing_item.currency
%p
  %strong Retailer:
  = @clothing_item.retailer_id
%p
  %strong Manufacturer:
  = @clothing_item.manufacturer_id

%p
  = link_to "Edit", edit_clothing_item_path(@clothing_item)
  |
  = link_to "Destroy", @clothing_item, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", clothing_items_path
